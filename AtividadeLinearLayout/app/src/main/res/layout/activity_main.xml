<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Custo de Viagem"
        android:textSize="20sp"
        android:background="@color/background"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <EditText
            android:id="@+id/edit_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/distancia"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total de quilômetros"
            android:gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />


        <EditText
            android:id="@+id/edit_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/preco"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preço por litro"
            android:gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp" />


        <EditText
            android:id="@+id/edit_autonomy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Autonomia"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KMs por Litro"
            android:gravity="center"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEU GASTO TOTAL SERÁ DE:"
            android:gravity="center"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/text_total_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R$ 0"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@color/money"
            android:layout_margin="16dp"
            />

        <Button
            android:id="@+id/button_calculate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULAR"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="16dp"
            android:backgroundTint="@color/button"
            />
    </LinearLayout>


</LinearLayout>